# AssemblyAI Configuration
ASSEMBLYAI_API_KEY=your_api_key_here
ASSEMBLYAI_CALLBACK_URL=""

# Azure Identity Configuration
AZURE_TENANT_ID=""
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""
AZURE_SUBSCRIPTION_ID=""

# Azure Storage Account
AZURE_STORAGE_ACCOUNT=your_storage_account_name

# Azure Storage Connection String
# This connection string is used for both blob storage and table storage
# The table storage is used to store mappings between uploaded audio files and their transcripts
# Required tables:
# - TranscriptMappings: Stores associations between blob names and AssemblyAI transcript IDs
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# Google OAuth Configuration
# Download credentials.json from Google Cloud Console and place in root directory
GOOGLE_CLIENT_ID=your_oauth_client_id
GOOGLE_CLIENT_SECRET=your_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8501  # Update for production

# Debug Configuration
DEBUG=false  # Set to true to enable debug mode

# Client Configuration
ORGANIZATION_NAME=your_organization_name
FEEDBACK_EMAIL=your_feedback_email
