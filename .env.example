# AssemblyAI Configuration
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Azure Identity Configuration
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Azure Storage Account
AZURE_STORAGE_ACCOUNT=your_storage_account_name

# OpenAI Configuration (for Whisper)
OPENAI_API_KEY=your_openai_api_key

# Azure Storage Connection String
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# Google OAuth Configuration
# Download credentials.json from Google Cloud Console and place in root directory
GOOGLE_CLIENT_ID=your_oauth_client_id
GOOGLE_CLIENT_SECRET=your_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8501  # Update for production

# Debug Configuration
DEBUG=false  # Set to true to enable debug features
